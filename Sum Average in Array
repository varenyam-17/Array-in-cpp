#include <iostream>
using namespace std;
int main()
{
    int n,sum=0;
    cout<<"Enter the size of Array"<<endl;
    cin>>n;
    int arr[n];
    for(int i=0;i<n;i++)
    {
        cout<<"Enter element"<<endl;
        cin>>arr[i];
        sum=sum+arr[i];
    }
    cout<<"Sum:"<<sum;
    cout<<""<<endl;
    int avg=sum/n;
    cout<<"Average:"<<avg;
}
